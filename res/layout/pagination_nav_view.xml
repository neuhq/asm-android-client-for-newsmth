<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
	android:layout_width="fill_parent" android:layout_height="?attr/actionBarSize"
	android:gravity="center"
	android:orientation="horizontal">
	<!-- 防止默认焦点为edittext -->
	<LinearLayout android:focusable="true" android:focusableInTouchMode="true" android:layout_width="0px" android:layout_height="0px"/> 
	<ImageButton android:id="@+id/btn_pre_page" android:layout_height="wrap_content"
	    android:padding="8dip" android:src="?attr/navPrevDrawable"
		android:layout_width="wrap_content" style="?attr/actionButtonStyle"
		android:layout_gravity="center" android:contentDescription="@string/pre_page"/>
	<EditText android:id="@+id/edittext_page_no"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:singleLine="true" android:imeOptions="actionGo" android:inputType="number"
		android:paddingLeft="12dip" android:paddingRight="12dip"
		android:layout_marginTop="4dip" android:layout_marginBottom="4dip"
		android:layout_gravity="center"/>
	<ImageButton android:id="@+id/btn_next_page" android:layout_height="wrap_content"
	    android:padding="8dip" android:src="?attr/navNextDrawable"
		android:layout_width="wrap_content" style="?attr/actionButtonStyle"
		android:layout_gravity="center" android:contentDescription="@string/next_page"/>
	


</LinearLayout>
</merge>
